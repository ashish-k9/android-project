<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context="testuser.test.com.testuser.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/search_field_layout"

        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <android.support.design.widget.TextInputLayout

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/search_editext"
        android:hint="@string/app_name"
        android:inputType="numberSigned"
        android:imeActionId="@+id/search_id"
        android:imeActionLabel="@android:string/search_go"
        android:imeOptions="actionUnspecified"
        android:singleLine="true"
        android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src= "@android:drawable/ic_menu_search"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/user_image_id"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1"
        android:contentDescription="@string/action_settings"
        android:minHeight="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:text="userName"
        android:layout_height="wrap_content"
        />
        <TextView
            android:id="@+id/userEmailTv"
            android:layout_width="wrap_content"
            android:text="user_email"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/userPhoneTv"
            android:layout_width="wrap_content"
            android:text="user_phone"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/userAddressTv"
        android:layout_width="wrap_content"
        android:text="user_address"
        android:layout_height="wrap_content"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="end"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/locatemap"
        android:layout_width="wrap_content"
        android:text="@string/start_navigation"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/callBtn"
        android:layout_width="wrap_content"
        android:text="@string/Call"
        android:layout_height="wrap_content" />
</LinearLayout>

    </LinearLayout>

</ScrollView>
